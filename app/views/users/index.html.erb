<% provide(:title, 'All Users') %>
<table class="table">
  <thead>
    <tr>
        <th scope="col">User ID</th>
        <th scope="col">Name</th>
        <th scope="col">Role</th>
        <th scope="col">Update Role</th>
    </tr>
  </thead>
  
  <tbody>
   <% @users.each do |user| %>
        <tr>
             <td><%= user.id %></th>
            <td><%= link_to user.name, user %></th>
            <td ><%= user.role %></td>
            <td><%= link_to "Edit", edit_user_path(user) %></td>
        </tr>
    <% end %>
    
  </tbody>
</table>